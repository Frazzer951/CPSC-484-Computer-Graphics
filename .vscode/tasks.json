{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: build active file",
            "command": "/usr/bin/g++",
            "args": [
                "${file}",
                "-lGL",
                "-lGLEW",
                "-lGLU",
                "-lglut",
                "-lglfw",
                "-o",
                "${fileDirname}/build/${fileBasenameNoExtension}"
